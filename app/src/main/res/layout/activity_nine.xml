<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical"
    tools:context=".NineHW.NineActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/cryptocurrency"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="10dp"
        android:id="@+id/recycleView_crypto_currency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_crypto_currency"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progressBar_nine_hw"
        style="?android:attr/progressBarStyle"
        android:indeterminateTint="@color/aqua"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:maxHeight="10dp"
        android:scrollbarSize="10dp"
         />

</LinearLayout>